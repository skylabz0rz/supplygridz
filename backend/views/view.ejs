<% layout('layout', { title: table }) %>
<a href="/admin">⬅ Back to Tables</a> |
<a href="/admin/<%= table %>/add">➕ Add Entry</a>
<table>
  <thead>
    <tr>
      <% columns.forEach(col => { %>
        <th><%= col %></th>
      <% }) %>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% rows.forEach(row => { %>
      <tr>
        <% columns.forEach(col => { %>
          <td><%= row[col] %></td>
        <% }) %>
        <td>
          <a href="/admin/<%= table %>/edit/<%= row.id %>">✏️</a>
          <a href="/admin/<%= table %>/delete/<%= row.id %>" onclick="return confirm('Are you sure?')">🗑️</a>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
